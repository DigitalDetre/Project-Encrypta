<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10sp">

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="91dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="288dp"
        android:layout_marginStart="288dp"
        android:background="#0064B5F6"
        android:text="@string/cancel"
        android:textColor="#818181" />

    <Button
        android:id="@+id/idbuttonSignup"
        android:layout_width="158dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="175dp"
        android:layout_marginEnd="130dp"
        android:layout_marginLeft="133dp"
        android:layout_marginRight="130dp"
        android:layout_marginStart="133dp"
        android:background="#D3D3D3"
        android:hint="@string/Submit" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="392dp"
        android:layout_height="63dp"
        android:layout_above="@+id/idSignupUsername"
        android:layout_marginBottom="30dp"
        android:text="@string/create_account_text"
        android:textAlignment="center"
        android:textSize="30sp" />
    <EditText
        android:id="@+id/idSignupUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idSignupEmail"
        android:layout_marginBottom="15dp"
        android:hint="@string/username_hint"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/idSignupEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idSignupPassword"
        android:layout_marginBottom="15dp"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/idRewritePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idbuttonSignup"
        android:layout_marginBottom="30dp"
        android:hint="@string/re_enter_password_hint"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/idSignupPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idRewritePassword"
        android:layout_marginBottom="15dp"
        android:hint="@string/password_hint"
        android:inputType="textPassword" />


</RelativeLayout>