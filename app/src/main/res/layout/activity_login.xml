<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10sp">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="396dp"
        android:layout_height="63dp"
        android:layout_above="@+id/username"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="29dp"
        android:layout_marginTop="134dp"
        android:text="@string/sign_in"
        android:textAlignment="center"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idSignupPassword"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="57dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="57dp"
        android:layout_marginStart="72dp"
        android:hint="@string/name_hint"
        android:importantForAutofill="no"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/idSignupPassword"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idbuttonSignup"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginBottom="49dp"
        android:hint="@string/password_hint"
        android:importantForAutofill="no"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/idbuttonSignup"
        android:layout_width="wrap_content"
        android:layout_height="27dp"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="307dp"
        android:layout_marginEnd="163dp"
        android:layout_marginLeft="169dp"
        android:layout_marginRight="163dp"
        android:layout_marginStart="169dp"
        android:background="#D3D3D3"
        android:hint="@string/log_in" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:background="#00FFFFFF"
        android:hint="@string/forgot_password"
        android:shadowColor="@color/colorPrimary"
        android:textColor="#4DB6AC"
        android:textColorHint="#4DB6AC" />


</RelativeLayout>